}

:lwi is opcode=0x1a & operand=4 & indirect_load=1 {
	local addr:4;
	local off:4;
	popSP(off);
	popSP(addr);
	addr = addr + off*4;
	local val:4 = *:4 addr;
	pushSP(val);
}

:itof operand is opcode=0x1c & subtype=0 & operand {
	local ptr = SP+operand;
	*:4 ptr = int2float(*:4 ptr);
}

:ftoi operand is opcode=0x1c & subtype=1 & operand {
	local ptr = SP+operand;
	*:4 ptr = trunc(*:4 ptr);
}

