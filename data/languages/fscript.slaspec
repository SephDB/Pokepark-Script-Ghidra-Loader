}
:eq0 is opcode=0x14 & operand=9 {
	local arg1:4;
	popSP(arg1);
	local res:4 = zext(arg1 == 0);
	pushSP(res);
}
:neg is opcode=0x14 & operand=10 {
	local arg:4;
	popSP(arg);
