}

:fadd is opcode=0x15 & operand=0 {
	local arg1:4;
	local arg2:4;
	popSP(arg2);
	popSP(arg1);
	pushSP(arg1 f+ arg2);
}
:fsub is opcode=0x15 & operand=1 {
	local arg1:4;
	local arg2:4;
	popSP(arg2);
	popSP(arg1);
	pushSP(arg1 f- arg2);
}
:fmul is opcode=0x15 & operand=2 {
	local arg1:4;
	local arg2:4;
	popSP(arg2);
